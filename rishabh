<body>
    <div class="fireworks" id="fireworks"></div>
    
    <div class="container">
        <h1>Happy Birthday Rishabh!</h1>
        <p class="subtitle">Enter your age to begin the celebration!</p>
        
        <div class="input-section">
            <input type="number" id="ageInput" placeholder="Enter your age" min="1" max="100">
            <button id="startBtn">Start Countdown</button>
        </div>
        
        <div class="countdown-display" id="countdownDisplay"></div>
        
        <div class="message" id="message">Happy Birthday My Dear Friend Rishabh!</div>
        
        <div class="balloons">
            <div class="balloon"></div>
            <div class="balloon"></div>
            <div class="balloon"></div>
            <div class="balloon"></div>
            <div class="balloon"></div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ageInput = document.getElementById('ageInput');
            const startBtn = document.getElementById('startBtn');
            const countdownDisplay = document.getElementById('countdownDisplay');
            const message = document.getElementById('message');
            const fireworks = document.getElementById('fireworks');
            
            let countdownInterval;
            let currentAge;
            
            startBtn.addEventListener('click', function() {
                const age = parseInt(ageInput.value);
                
                if (isNaN(age) || age <= 0 || age > 100) {
                    alert('Please enter a valid age between 1 and 100');
                    return;
                }
                
                // Reset previous countdown
                clearInterval(countdownInterval);
                message.classList.remove('show');
                countdownDisplay.textContent = '';
                
                // Start new countdown
                currentAge = age;
                countdownDisplay.textContent = currentAge;
                
                countdownInterval = setInterval(function() {
                    currentAge--;
                    countdownDisplay.textContent = currentAge;
                    
                    // Add animation effect
                    countdownDisplay.style.transform = 'scale(1.2)';
                    setTimeout(() => {
                        countdownDisplay.style.transform = 'scale(1)';
                    }, 300);
                    
                    if (currentAge <= 0) {
                        clearInterval(countdownInterval);
                        countdownDisplay.textContent = '0';
                        
                        // Show message after a short delay
                        setTimeout(() => {
                            message.classList.add('show');
                            createFireworks();
                        }, 500);
                    }
                }, 1000);
            });
            
            function createFireworks() {
                // Clear previous fireworks
                fireworks.innerHTML = '';
                
                // Create multiple fireworks
                for (let i = 0; i < 50; i++) {
                    setTimeout(() => {
                        const firework = document.createElement('div');
                        firework.classList.add('firework');
                        firework.style.position = 'fixed';
                        firework.style.left = Math.random() * 100 + 'vw';
                        firework.style.top = Math.random() * 100 + 'vh';
                        firework.style.width = '4px';
                        firework.style.height = '4px';
                        firework.style.borderRadius = '50%';
                        firework.style.background = getRandomColor();
                        firework.style.boxShadow = '0 0 10px ' + getRandomColor();
                        firework.style.animation = `explode 1s forwards`;
                        
                        fireworks.appendChild(firework);
                        
                        // Remove firework after animation
                        setTimeout(() => {
                            firework.remove();
                        }, 1000);
                    }, i * 100);
                }
                
                // Add CSS for explosion animation
                if (!document.querySelector('#fireworkStyles')) {
                    const style = document.createElement('style');
                    style.id = 'fireworkStyles';
                    style.textContent = `
                        @keyframes explode {
                            0% {
                                transform: scale(1);
                                opacity: 1;
                            }
                            100% {
                                transform: scale(20);
                                opacity: 0;
                            }
                        }
                    `;
                    document.head.appendChild(style);
                }
            }
            
            function getRandomColor() {
                const colors = ['#ff6b6b', '#48dbfb', '#1dd1a1', '#feca57', '#ff9ff3', '#54a0ff'];
                return colors[Math.floor(Math.random() * colors.length)];
            }
            
            // Add some initial animation to the countdown display
            countdownDisplay.style.opacity = '0';
            setTimeout(() => {
                countdownDisplay.style.transition = 'opacity 1s ease';
                countdownDisplay.style.opacity = '1';
            }, 500);
        });
    </script>
</body>
